<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
       <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
    <Import Project="packages\ILRepack.Lib.MSBuild.Task.2.0.44\build\ILRepack.Lib.MSBuild.Task.targets" Condition="Exists('packages\ILRepack.Lib.MSBuild.Task.2.0.44\build\ILRepack.Lib.MSBuild.Task.targets')" />


    <Import Project="environment.props" />
    <Import Project="ILRepack.targets" />
    <PropertyGroup>
        <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
        <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
        <ProjectGuid>{5DF97E86-BF46-46C5-894F-6B2D80EA6645}</ProjectGuid>
        <OutputType>Library</OutputType>
        <AppDesignerFolder>Properties</AppDesignerFolder>
        <RootNamespace>VDB</RootNamespace>
        <AssemblyName>DrakesVDB</AssemblyName>
        <CompanyName>DrakeMods</CompanyName>
        <Version>0.0.1</Version>
        <ThunderstoreBasePath>C:\Modding\Thunderstore</ThunderstoreBasePath>
        <ThunderstoreFolder>C:\Modding\Thunderstore\$(CompanyName)-$(AssemblyName)-$(Version)</ThunderstoreFolder>
        <ZipOutput>$(ThunderstoreFolder).zip</ZipOutput>
        <ManifestPath>$(ThunderstoreFolder)\manifest.json</ManifestPath>
        <Description>This is a powerful tool that is both meant for basic server management of whitelist, and admin, banlists
            as well as tracking anything else. It is meant to be extended with other mods to add aditional data beyond normal use. Tract guilds, or factions
            Could be use for profession or recipes, any sort of things. This ships with a base database with admin, player roles and example group a and b.
            it creates a baseline VDB valheim database. a local json based storage that can be used by any other mod.
            This is an early beta there may be bugs!</Description>
        <WebsiteUrl>https://github.com/drakethos/DrakesVDB</WebsiteUrl>
        <Dependencies>"denikson-BepInExPack_Valheim-5.4.2333", "ValheimModding-Jotunn-2.27.0"</Dependencies>
        <TargetFrameworkVersion>v4.8.1</TargetFrameworkVersion>
        <FileAlignment>512</FileAlignment>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
        <PlatformTarget>AnyCPU</PlatformTarget>
        <DebugSymbols>true</DebugSymbols>
        <DebugType>full</DebugType>
        <Optimize>false</Optimize>
        <OutputPath>bin\Debug\</OutputPath>
        <DefineConstants>DEBUG;TRACE</DefineConstants>
        <ErrorReport>prompt</ErrorReport>
        <WarningLevel>4</WarningLevel>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
        <PlatformTarget>AnyCPU</PlatformTarget>
        <DebugType>pdbonly</DebugType>
        <Optimize>true</Optimize>
        <OutputPath>bin\Release\</OutputPath>
        <DefineConstants>TRACE</DefineConstants>
        <ErrorReport>prompt</ErrorReport>
        <WarningLevel>4</WarningLevel>
    </PropertyGroup>
    <ItemGroup>
